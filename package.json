    "@playwright/test": "^1.44.0",
    "@supabase/supabase-js": "^2.43.4",
    "dotenv": "^16.4.5",
    "faker-js": "^1.0.0",
    "@lhci/cli": "^0.13.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JWPAPAROY/planB.git"
  },
  "homepage": "https://jwpaparoy.github.io/planB/",
