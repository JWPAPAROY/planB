{
  "name": "planb-retirement-platform",
  "version": "2.0.0",
  "description": "완전한 은퇴설계 플랫폼 - 계산기 + 커뮤니티 + 전문가 매칭 + WebRTC",
  "main": "index.html",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:cleanup": "node scripts/cleanup-test-data.js",
    "test:seed": "node scripts/seed-test-data.js",
    "test:full": "npm run test:cleanup && npm run test:seed && npm run test && npm run test:cleanup",
    "serve": "python3 -m http.server 8000",
    "lighthouse": "lhci autorun",
    "analyze": "bundlemon"
  },
  "keywords": [
    "retirement",
    "calculator",
    "expert-matching",
    "webrtc",
    "supabase",
    "community"
  ],
